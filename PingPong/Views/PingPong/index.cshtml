@model IEnumerable<PingPong.Models.SinglesMatch>
@{
    Layout = "~/Views/Shared/_PingPongLayout.cshtml";
}

<div ng-controller="SinglesMatches as vm">
    <ul ng-repeat="match in vm.singlesMatches">
        <li>Player 1 score: {{match.PlayerOneScore}}, Player 2 score: {{match.PlayerTwoScore}}</li>
    </ul>
</div>


@foreach (var item in Model)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="jot">
                @item.PlayerOneScore
            </div>
        </div>
    </div>
}
